<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Phone Order</title>
    <link rel="stylesheet" href="/stylesheets/register.css" />
  </head>
  <body>
    <div class="logo-container1">
      <img src="/images/onlyRTE_LOGO.png" alt="ReadyToEat Logo" class="logo" />
    </div>

    <div class="registration-container1">
      <div class="registration-wrapper">
        <h1 class="h2" style="text-align: center; margin-bottom: 1.5rem">
          Create Phone Order
        </h1>

        <form action="/order/phone" method="POST" class="registration-form">
          <div class="form-group">
            <label for="customerId" class="form-label">Select Customer*</label>
            <select
              class="form-input"
              id="customerId"
              name="customerId"
              required
            >
              <% customers.forEach(customer => { %>
              <option value="<%= customer._id %>">
                <%= customer.firstName %> <%= customer.lastName %>
              </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label for="menuId" class="form-label">Select Menu*</label>
            <select
              class="form-input"
              id="menuId"
              name="menuId"
              onchange="updateDishesByMenu(this.value)"
              required
            >
              <option value="">-- Select a Menu --</option>
              <% for (const menuId in dishesByMenu) { const group =
              dishesByMenu[menuId]; %>
              <option value="<%= menuId %>"><%= group.menu.name %></option>
              <% } %>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label">Select Dishes*</label>
            <div id="dishes-container">
              <p class="text-muted">Please select a menu to see the dishes.</p>
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="next-button" >Create Order</button>
          </div>
        </form>
      </div>
    </div>
  </body>
   <script>
    const dishesByMenuData = <%- JSON.stringify(dishesByMenu) %>;
  </script>
  <script src="/javascripts/phoneOrder.js" defer></script>
</html>
