<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/admin/adminRestaurantManagement.css" />
  </head>
  <body>
    <div id="top-nav" class="navbar navbar-inverse navbar-static-top">
      <div class="container bootstrap snippets bootdey">
        <div class="navbar-header">
          <button
            type="button"
            class="navbar-toggle"
            data-toggle="collapse"
            data-target=".navbar-collapse"
          >
            <span class="icon-toggle"></span>
          </button>
          <a class="navbar-brand" >
            <div class="navbar-logo">
              <img src="/images/onlyRTE_LOGO.png" alt="Logo" />
            </div>
          </a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a
                class="dropdown-toggle"
                role="button"
                data-toggle="dropdown"
                href="#"
              >
                <i class="glyphicon glyphicon-user"></i> Admin
                <span class="caret"></span
              ></a>
              <ul id="g-account-menu" class="dropdown-menu" role="menu">
                <li>
                  <a href="/logout"
                    ><i class="glyphicon glyphicon-lock"></i> Logout</a
                  >
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container bootstrap snippets bootdey">
      <div class="row">
        <div class="col-md-3">
         <!-- <a href="#"
            ><strong
              ><i class="glyphicon glyphicon-briefcase"></i> Toolbox</strong
            ></a
          >-->
          <hr />

          <ul class="nav nav-pills nav-stacked">
            <li>
              <a href="/admin" id="restaurant-management-link"
                ><i class="glyphicon glyphicon-cutlery"></i> Restaurant
                Management</a
              >
            </li>
            <li>
              <a href="/admin" id="analytics-link"
                ><i class="glyphicon glyphicon-stats"></i> Analytics</a
              >
            </li>
            <li>
              <a href="/admin" id="analytics2-link"
              ><i class="glyphicon glyphicon-signal"></i> Analytics 2</a
              >
            </li>
          </ul>

          <hr />
        </div>
        <div class="col-md-9">
          <a href="/admin"
            ><strong
              ><i class="glyphicon glyphicon-dashboard"></i> My
              Dashboard</strong
            ></a
          >
          <hr />
          <div id="dynamic-content">
            <div class="page-container">
              <div class="page-header">
                <h1 class="page-title">Restaurant Management</h1>
                <div class="header-actions">
                  <button
                    class="btn btn-primary"
                    onclick="window.location.href='/admin/pending'"
                  >
                    Pending Requests
                  </button>
                  <button
                    class="btn btn-secondary"
                    onclick="window.location.href='/admin/addNewRestaurant'"
                  >
                    Add New Restaurant
                  </button>
                </div>
              </div>
          
              <div class="table-container">
                <table class="restaurant-table">
                  <thead>
                    <tr class="table-header">
                      <th class="column-header">Name</th>
                      <th class="column-header">Address</th>
                      <th class="column-header">Phone</th>
                      <th class="column-header">Price per Person</th>
                      <th class="column-header">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (restaurants && restaurants.length > 0) { %>
                      <% restaurants.forEach(function (restaurant) { %>
                        <tr class="table-row" data-id="<%= restaurant._id %>">
                          <td class="table-cell"><%= restaurant.restaurantName %></td>
                          <td class="table-cell"><%= restaurant.address %></td>
                          <td class="table-cell"><%= restaurant.phone %></td>
                          <td class="table-cell">
                            â‚¬<%= restaurant.pricePerPerson.toFixed(2) %>
                          </td>
                          <td class="table-cell">
                            <div class="action-buttons">
                              <a
                                href="/admin/restaurants/restaurant/edit?restaurantId=<%= restaurant._id %>"
                                class="btn btn-edit"
                                >Edit</a
                              >
                              <button
                                class="btn btn-delete"
                                data-id="<%= restaurant._id %>"
                              >
                                Delete
                              </button>
                            </div>
                          </td>
                        </tr>
                      <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="5" class="table-cell">No restaurants found.</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/javascripts/adminDashboard.js"></script>
  </body>
</html>