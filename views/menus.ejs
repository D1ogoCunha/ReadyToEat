<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menus</title>
    <link rel="stylesheet" href="/stylesheets/menus.css" />
  </head>
  <body>
    <header>
      <div class="logo">
        <img src="/images/onlyRTE_LOGO.png" alt="Logo" />
      </div>
      <h1 class="title">Menus</h1>
    </header>
    <main>
      <% menus.forEach(menu => { %>
        <a href="/menus/dishes?menuId=<%= menu._id %>" class="menu-link">
          <div class="menu-card">
            <img src="<%= menu.image %>" alt="<%= menu.name %>" />
            <h3><%= menu.name %></h3>
          </div>
        </a>
      <% }) %>
      <a href="/menus/new" class="add-menu">+</a>
    </main>
  </body>
</html>