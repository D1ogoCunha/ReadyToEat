<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Menu</title>
    <link rel="stylesheet" href="/stylesheets/register.css" />
  </head>
  <body>
    <!-- Edit Menu Container -->
    <div class="registration-container">
      <div class="registration-wrapper">
        <h1>Edit Menu</h1>

        <!-- Edit Menu Form -->
        <form action="/menus/edit" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label class="form-label">Menu Name*</label>
            <input
              type="text"
              class="form-input"
              name="name"
              value="<%= menu.name %>"
              placeholder="Enter menu name"
              required
            />
          </div>

          <!-- Menu Image Input -->
          <div class="form-group">
            <label class="form-label">Menu Image</label>
            <input type="file" class="form-input" name="image" />
          </div>
          
          <div class="form-actions">
            <button type="submit" class="next-button">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
