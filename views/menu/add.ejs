<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Dish</title>
    <link rel="stylesheet" href="/stylesheets/add.css" />
  </head>
  <body>
    <div class="header">
      <h1>Add New Dish</h1>
      <p>Add your dish details below</p>
    </div>

    <!-- Single Box for Progress Bar and Form Content -->
    <div class="box combined-box">
      <!-- Progress Bar -->
      <div class="progress-bar">
        <div class="step active">1</div>
        <div class="step">2</div>
        <div class="step">3</div>
      </div>

      <!-- Separator -->
      <div class="separator"></div>

      <!-- Form Content -->
      <form
        id="dishForm"
        action="/dishes/add"
        method="POST"
        enctype="multipart/form-data"
      >

      <input type="hidden" name="menuId" value="<%= menuId %>" />
        <!-- Step 1 -->
        <div class="form-step step-1">
          <div class="dishName">
            <label for="dishName">Dish Name*</label>
            <input
              type="text"
              id="dishName"
              name="dishName"
              placeholder="Enter dish name"
              required
            />
          </div>
          <div class="dishDescription">
            <label for="description">Description*</label>
            <textarea
              id="description"
              name="description"
              placeholder="Enter description"
              required
            ></textarea>
          </div>

          <div class="row">
            <div class="column">
              <label for="category">Category*</label>
              <select id="category" name="category" required>
                <option value="">Select category</option>
                <option value="starter">Starter</option>
                <option value="main">Main</option>
                <option value="dessert">Dessert</option>
              </select>
            </div>
            <div class="column">
              <label for="prepTime">Preparation Time*</label>
              <select id="prepTime" name="prepTime" required>
                <option value="">Select time</option>
                <option value="15">15 minutes</option>
                <option value="30">30 minutes</option>
                <option value="45">45 minutes</option>
                <option value="60">1 hour</option>
              </select>
            </div>
          </div>

          <div class="separator2"></div>

          <div class="formButton">
            <button type="button" class="next">Next Step</button>
          </div>
        </div>

        <!-- Step 2 -->
        <div class="form-step step-2 hidden">
          <div class="priceC">
            <label for="price">Price*</label>
            <input
              type="number"
              id="price"
              name="price"
              step="0.01"
              min="0"
              value="0.00"
              required
            />
          </div>
          <div class="row">
            <div class="column">
              <label for="portionSize">Portion Size</label>
              <select id="portionSize" name="portionSize" required>
                <option value="">Select portion size</option>
                <option value="small">Individual (1 Person)</option>
                <option value="medium">Medium (2 Persons)</option>
                <option value="large">Familiar (4 Persons)</option>
              </select>
            </div>
          </div>

          <h3>Nutritional Information</h3>
          <div class="nutrition-grid">
            <div class="nutrition-item">
              <label for="calories">Calories</label>
              <input
                type="number"
                id="calories"
                name="calories"
                placeholder="0"
              />
            </div>
            <div class="nutrition-item">
              <label for="protein">Protein (g)</label>
              <input
                type="number"
                id="protein"
                name="protein"
                placeholder="0"
              />
            </div>
            <div class="nutrition-item">
              <label for="carbs">Carbs (g)</label>
              <input type="number" id="carbs" name="carbs" placeholder="0" />
            </div>
            <div class="nutrition-item">
              <label for="fat">Fat (g)</label>
              <input type="number" id="fat" name="fat" placeholder="0" />
            </div>
            <div class="nutrition-item">
              <label for="sodium">Sodium (mg)</label>
              <input type="number" id="sodium" name="sodium" placeholder="0" />
            </div>
          </div>

          <div class="separator2"></div>

          <div class="formButton">
            <button type="button" class="prev">Previous Step</button>
            <button type="button" class="next">Next Step</button>
          </div>
        </div>

        <!-- Step 3 -->
        <div class="form-step step-3 hidden">
          <label for="image">Dish Image*</label>
          <div class="image-upload">
            <input
              type="file"
              id="image"
              name="imagem"
              accept="image/png, image/jpeg"
              required
            />
            <div class="upload-area" id="uploadArea">
              <div class="upload-icon">
                <img src="/images/upload-icon.png" alt="Upload Icon" />
              </div>
              <p>
                Drag and drop your image here, or
                <span class="browse">search</span>
              </p>
              <p class="upload-recommendation">
                Recommended: 1200Ã—800px, PNG or JPG
              </p>
            </div>
            <div class="preview-container" id="previewContainer">
              <img id="previewImage" src="" alt="Preview" class="hidden" />
              <p id="previewText">No image selected</p>
            </div>
          </div>

          <div class="separator2"></div>

          <div class="formButton">
            <button type="button" class="prev">Previous Step</button>
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
    
    <script src="/javascripts/form.js"></script>
  </body>
</html>
