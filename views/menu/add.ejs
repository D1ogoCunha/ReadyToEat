<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Dish</title>
    <link rel="stylesheet" href="/stylesheets/add.css" />
  </head>
  <body>
    <div class="header">
      <h1>Add New Dish</h1>
      <p>Add your dish details below</p>
    </div>

    <!-- Single Box for Progress Bar and Form Content -->
    <div class="box combined-box">
      <!-- Progress Bar -->
      <div class="progress-bar">
        <div class="step active">1</div>
        <div class="step">2</div>
        <div class="step">3</div>
      </div>

      <!-- Separator -->
      <div class="separator"></div>

      <form
        id="dishForm"
        action="<%= dish ? `/dishes/${dish._id}` : '/dishes/add' %>"
        method="POST"
        enctype="multipart/form-data"
      >
        <input type="hidden" name="menuId" value="<%= menuId || (dish ? dish.menu : '') %>" />
      
        <!-- Step 1 -->
        <div class="form-step step-1">
          <div class="dishName">
            <label for="dishName">Dish Name*</label>
            <input
              type="text"
              id="dishName"
              name="dishName"
              placeholder="Enter dish name"
              value="<%= dish ? dish.nome : '' %>"
              required
            />
          </div>
          <div class="dishDescription">
            <label for="description">Description*</label>
            <textarea
              id="description"
              name="description"
              placeholder="Enter description"
              required
            ><%= dish ? dish.descricao : '' %></textarea>
          </div>
      
          <div class="row">
            <div class="column">
              <label for="category">Category*</label>
              <select id="category" name="category" required>
                <option value="">Select category</option>
                <option value="starter" <%= dish && dish.categoria === 'starter' ? 'selected' : '' %>>Starter</option>
                <option value="main" <%= dish && dish.categoria === 'main' ? 'selected' : '' %>>Main</option>
                <option value="dessert" <%= dish && dish.categoria === 'dessert' ? 'selected' : '' %>>Dessert</option>
              </select>
            </div>
            <div class="column">
              <label for="prepTime">Preparation Time*</label>
              <select id="prepTime" name="prepTime" required>
                <option value="">Select time</option>
                <option value="15" <%= dish && dish.tempoPreparo === '15' ? 'selected' : '' %>>15 minutes</option>
                <option value="30" <%= dish && dish.tempoPreparo === '30' ? 'selected' : '' %>>30 minutes</option>
                <option value="45" <%= dish && dish.tempoPreparo === '45' ? 'selected' : '' %>>45 minutes</option>
                <option value="60" <%= dish && dish.tempoPreparo === '60' ? 'selected' : '' %>>1 hour</option>
              </select>
            </div>
          </div>

          <div class="separator2"></div>

          <div class="formButton">
            <button type="button" class="next">Next Step</button>
          </div>
        </div>
      
        <!-- Step 2 -->
        <div class="form-step step-2 hidden">
          <div class="priceC">
            <label for="price">Price*</label>
            <input
              type="number"
              id="price"
              name="price"
              step="0.01"
              min="0"
              value="<%= dish ? dish.preco : '0.00' %>"
              required
            />
          </div>
          <div class="row">
            <div class="column">
              <label for="portionSize">Portion Size</label>
              <select id="portionSize" name="portionSize" required>
                <option value="">Select portion size</option>
                <option value="small" <%= dish && dish.tamanhoPorcao === 'small' ? 'selected' : '' %>>Individual (1 Person)</option>
                <option value="medium" <%= dish && dish.tamanhoPorcao === 'medium' ? 'selected' : '' %>>Medium (2 Persons)</option>
                <option value="large" <%= dish && dish.tamanhoPorcao === 'large' ? 'selected' : '' %>>Familiar (4 Persons)</option>
              </select>
            </div>
          </div>
          <div class="formButton">
            <button type="button" class="prev">Previous Step</button>
            <button type="button" class="next">Next Step</button>
          </div>
        </div>
      
        <!-- Step 3 -->
        <div class="form-step step-3 hidden">
          <label for="image">Dish Image*</label>
          <div class="image-upload">
            <input
              type="file"
              id="image"
              name="image"
              accept="image/png, image/jpeg"
              <%= dish ? '' : 'required' %>
            />
            <div class="upload-area" id="uploadArea">
              <div class="upload-icon">
                <img src="/images/upload-icon.png" alt="Upload Icon" />
              </div>
              <p>
                Drag and drop your image here, or
                <span class="browse">search</span>
              </p>
              <p class="upload-recommendation">
                Recommended: 1200Ã—800px, PNG or JPG
              </p>
            </div>
            <div class="preview-container" id="previewContainer">
              <img id="previewImage" src="" alt="Preview" class="hidden" />
              <p id="previewText">No image selected</p>
            </div>       
            <div class="separator2"></div>
          </div>
          <button type="button" class="prev">Previous</button>
          <button type="submit">Submit</button>
        </div>
      </form>
      </form>
    </div>
    <script src="/javascripts/form.js"></script>
  </body>
</html>
