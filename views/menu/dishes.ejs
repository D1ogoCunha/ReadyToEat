<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pratos do Menu</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/menu/dishes.css" />
    <link rel="stylesheet" href="/stylesheets/partials/navbar.css" />
  </head>
  <body>
    <%- include('../partials/navbar', { user: user }) %>

    <main>
      <h1><%= menu.name %></h1>
    
      <!-- Contador de pratos -->
      <div class="dish-counter">
        <p>Dishes: <%= pratos.length %>/<%= maxDishes %></p>
      </div>
    
      <ul class="pratos-lista">
        <% pratos.forEach(function(prato) { %>
        <li class="prato-item">
          <a href="/dishes/dish?dishId=<%= prato._id %>">
            <img
              src="<%= prato.imagem %>"
              alt="<%= prato.nome %>"
              class="prato-imagem"
            />
          </a>
          <a href="/dishes/dish?dishId=<%= prato._id %>">
            <h2><%= prato.nome %></h2>
          </a>
          <p><strong>Descrição:</strong> <%= prato.descricao %></p>
          <p><strong>Preço:</strong> <%= prato.preco.toFixed(2) %> €</p>
          <h3>Informações Nutricionais (por 100g):</h3>
          <ul>
            <li>
              <strong>Calorias:</strong> <%= prato.informacaoNutricional.calorias %> kcal
            </li>
            <li>
              <strong>Proteínas:</strong> <%= prato.informacaoNutricional.proteinas %> g
            </li>
            <li>
              <strong>Carboidratos:</strong> <%= prato.informacaoNutricional.carboidratos %> g
            </li>
            <li>
              <strong>Gorduras:</strong> <%= prato.informacaoNutricional.gorduras %> g
            </li>
          </ul>
          <a href="/dishes/edit?dishId=<%= prato._id %>" class="btn-editar">Edit</a>
          <form
            action="/dishes/<%= prato._id %>/delete?menuId=<%= menu._id %>"
            method="POST"
            style="display: inline"
          >
            <button type="submit" class="btn-editar">Delete</button>
          </form>
        </li>
        <% }); %>
      </ul>

      <% if (pratos.length < maxDishes) { %>
      <a href="/dishes/add" class="btn-adicionar">+</a>
      <% } else { %>
      <p class="max-dishes-warning">You have reached the maximum number of dishes (10).</p>
      <% } %>
    </main>
  </body>
</html>
